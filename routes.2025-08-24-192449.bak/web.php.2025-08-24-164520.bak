// Added for stability: render opportunities.show with an $opportunity object
Route::get('/opportunities/{id}', function ($id) {
    $opportunity = (object)[
        'id'    => $id,
        'title' => 'Opportunity '.$id,
        // add other fields if your Blade references them:
        'summary' => 'Details coming soon',
    ];
    return view('opportunities.show', compact('opportunity'));
})
->where('id','[0-9A-Za-z\-]+')
->withoutMiddleware([
    \App\Http\Middleware\EnforceOrgRegistration::class,
    \App\Http\Middleware\MicroCache::class,
    \App\Http\Middleware\SetLocaleAndHeaders::class,
    \App\Http\Middleware\SecurityHeaders::class,
])
->name('opportunities.show.sanity');
