\Illuminate\Support\Facades\Route::get('/account/certificates', function () {
    $user = \Illuminate\Support\Facades\Auth::user();
    if (!$user) { abort(403); }

    $certs = \Illuminate\Support\Facades\DB::table('certificates')
        ->where('user_id', $user->id)
        ->orderByDesc('issued_at')
        ->limit(200)
        ->selectRaw("'Certificate' as title, issued_at, hours, code, uuid, pdf_path as pdf_url, revoked_at")
        ->get()
        ->map(function($r){
            return (object)[
                'title'      => $r->title ?? 'Certificate',
                'issued_at'  => $r->issued_at,
                'awarded_at' => $r->issued_at,
                'hours'      => $r->hours,
                'revoked_at' => $r->revoked_at,
                'code'       => $r->code ?? $r->uuid,
                'pdf_url'    => $r->pdf_url,
            ];
        });

    return view('account.certificates', ['certs' => $certs]);
})->middleware(['auth','verified'])->name('account.certificates');






/* Admin login (guest) — set intended URL then render Argon guest login */
Route::get('/admin/login', function (\Illuminate\Http\Request $request) {
    Session::put('url.intended', route('admin.dashboard'));
    return view('admin.auth.login');
})->middleware(['web','guest'])->name('admin.login');
