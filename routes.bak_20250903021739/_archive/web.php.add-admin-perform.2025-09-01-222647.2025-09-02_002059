if (!Route::has('account.profile')) {
    Route::middleware('auth')->get('/account/profile', function () {
        $uid = auth()->id();
        $hours = \Illuminate\Support\Facades\DB::table('hours')->where('user_id',$uid)->sum('hours');
        $last  = \Illuminate\Support\Facades\DB::table('hours')->where('user_id',$uid)->max('occurred_at');
        $certs = \Illuminate\Support\Facades\DB::table('certificates')->where('user_id',$uid)
                  ->orderByDesc('issued_at')->limit(12)->get(['uuid','issued_at']);

        return view('account.profile', [
            'totals'=>[
                'hours'=> (float) $hours,
                'certs'=> (int) $certs->count(),
                'last' => $last ? \Illuminate\Support\Carbon::parse($last)->format('Y-m-d') : '',
            ],
            'certs'=> $certs,
        ]);
    })->name('account.profile');
}
